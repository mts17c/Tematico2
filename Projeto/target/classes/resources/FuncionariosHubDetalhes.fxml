<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.seuprojeto.FuncionariosController">

    <!-- Tabela central -->
    <center>
        <TableView fx:id="tabelaFuncionarios">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                <TableColumn fx:id="colCargo" text="Cargo" prefWidth="120"/>
                <TableColumn fx:id="colDepartamento" text="Departamento" prefWidth="120"/>
            </columns>
        </TableView>
    </center>

    <!-- Rodapé com botão sair -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button text="Sair" onAction="#sairDoPrograma"/>
        </HBox>
    </bottom>

</BorderPane>
